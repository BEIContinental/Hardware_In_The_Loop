all : main.o saveData.o platform.o ert_main.o sendFloat.o recvFloat.o fils1.o fils2.o pere.o
	g++ main.o -o platform saveData.o platform.o ert_main.o sendFloat.o recvFloat.o fils1.o fils2.o pere.o

main.o : main.cpp
	g++ -c main.cpp -o main.o

ert_main.o : ert_main.cpp
	g++ -c ert_main.cpp -o ert_main.o

platform.o : platform.cpp
	g++ -c platform.cpp -o platform.o

saveData.o : saveData.cpp
	g++ -c saveData.cpp -o saveData.o

sendFloat.o : sendFloat.cpp
	g++ -c sendFloat.cpp -o sendFloat.o

recvFloat.o : recvFloat.cpp
	g++ -c recvFloat.cpp -o recvFloat.o

fils1.o : fils1.cpp
	g++ -c fils1.cpp -o fils1.o

fils2.o : fils2.cpp
	g++ -c fils2.cpp -o fils2.o

pere.o : pere.cpp
	g++ -c pere.cpp -o pere.o

clean:
	rm -rf *.o

mrproper: clean
	rm -rf platform
